                codeFold: true,
                //syncScrolling : false,
                saveHTMLToTextarea: true,    // 保存 HTML 到 Textarea
                searchReplace: true,
                //watch : false,                // 关闭实时预览
                toolbar: true,             //关闭工具栏
                toolbarIcons: [
                    "undo", "redo", "|",
                    "list-ul", "list-ol", "hr", "|",
                    "uppercase", "lowercase", "link", "help", "|",
                    "reference-link", "code-block", "image", "table", "|",
                    "watch", "preview", "fullscreen"
                ], //自定义图标

                toolbarIconsClass: {},
                //previewCodeHighlight : false, // 关闭预览 HTML 的代码块高亮，默认开启
