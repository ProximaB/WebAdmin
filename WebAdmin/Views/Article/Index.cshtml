@model List<Blog>
@{ 
    Layout = "_LeftNav";
}
<table class="table table-striped table-hover table-bordered"> 

    <thead>
        <tr>
            <th>标题</th>
            <th>作者</th>
            <th>状态</th>
            <th>时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>
                    @blog.Title
                </td>
                <td>
                    @blog.AuthorName
                </td>
                <td>@blog.Status</td>
                <td>
                    @blog.UpdateTime.ToString("yyyy-M-dd H:mm")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@blog.Id" class="label label-default">编辑</a>
                    <a asp-action="DeleteArticle" asp-route-id="@blog.Id" class="label label-danger">删除</a>
                    <a asp-action="PublishArticle" asp-route-id="@blog.Id" class="label label-success">发布</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<pager pager-option="ViewBag.Pager as MyPagerOption"></pager>
