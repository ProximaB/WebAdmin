@using System.Collections
@{
    ViewData["Title"] = "首页";
}


<section name="TaskNav" class="col-md-6">
    <h4>TaskEnv</h4>
    <ul>
        @{  foreach (ValueTuple<string, string> values in (List<ValueTuple<string, string>>)ViewBag.TaskEnv)
            {
                var length = values.Item2.Length > 20 ? 20 : values.Item2.Length;
                <li>
                    <p>
                        <span class="text-primary">
                            @values.Item1 :
                        </span>
                        <span>@values.Item2.Substring(0,length)</span>
                </p>

            </li>}
        }
    </ul>
</section>

<section name="TaskNav" class="col-md-6">
    @{
        var connection = ViewBag.HostEnv as string;
    }
    <h4>HostEnv</h4>
    <ul>
        <li>
            <p>
                <span class="text-primary">当前时间:</span>
                <span>@DateTime.Now.ToLocalTime()</span>
            </p>
            <p>
                <span class="text-primary">数据库:</span>
                <span>@connection.Substring(0, 20)</span>
            </p>
        </li>
    </ul>
</section>