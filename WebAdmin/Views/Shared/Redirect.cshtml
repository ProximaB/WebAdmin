@{
	ViewData["Title"] = "重定向";
}



<body onload="lod()">
    <h3 class="text-danger">提示!</h3>
    <h4>@ViewBag.RedirectMsg</h4>
    <div id="showTime"></div>
</body>

@section Scripts{
    <script>
        var cnt = 3;
        function lod(){
           if(cnt <= 0){
             window.location.href = "@ViewBag.Referer";
         }else{
             document.getElementById("showTime").innerHTML = "页面<font color=red> " + cnt + " </font>秒后跳转";
              cnt--;
        }
          setTimeout("lod()",1000);
        }
    </script>
}

