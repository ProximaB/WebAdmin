@using MSDev.Task.Models
@{
	ViewBag.Title = "title";
	Layout = "_NewsLayout";
}

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>标题</th>
			<th>来源</th>
			<th>时间</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (BingNews news in (List<BingNews>)ViewBag.ListData)
			{
			<tr>
				<td><a href="@news.Url" target="_blank">@news.Title</a></td>
				<td>@news.Provider</td>
				<td>@string.Format("{0:yyyy-MM-dd HH:mm}", @news.CreatedTime)</td>
				<td>
					<input type="hidden" value="@news.Id" />
					<a class="label label-danger" onclick="delNews('@news.Id')">删除</a>
				</td>
			</tr>
			}
		}
	</tbody>
</table>
<pager pager-option="ViewBag.Pager as PagerOption"></pager>

<script>

	function delNews(id) {
		$.post('DelNews', { id: id }, function (data) {

			if (data.errorCode == 0) {


			}
			console.log(data);
		})
	}
</script>
